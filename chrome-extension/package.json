{
  "name": "resume-checker-extension-ui",
  "private": true,
  "version": "1.0.0",
  "description": "UI build setup for Tailwind CSS in Chrome MV3 extension",
  "scripts": {
    "build:css": "tailwindcss -c tailwind.config.js -i ./src/input.css -o ./css/tailwind.css --minify",
    "watch:css": "tailwindcss -c tailwind.config.js -i ./src/input.css -o ./css/tailwind.css --watch"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.12"
  }
}

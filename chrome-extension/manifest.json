{
  "manifest_version": 3,
  "name": "Resume Checker",
  "version": "1.0",
  "description": "Analyze how well your CV matches a job description",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "options_page": "options.html",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "host_permissions": [
    "http://localhost:8000/*",
    "http://91.98.122.7/*",
    "http://91.98.122.7:8000/*"
  ],
  "optional_host_permissions": [
    "https://*/*"
  ]
}
